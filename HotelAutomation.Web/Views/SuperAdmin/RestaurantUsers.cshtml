@model IEnumerable<Models.User>

@{
    ViewBag.Title = "RestaurantUsers";
    Layout = "~/Views/SuperAdmin/_SuperAdminLayout.cshtml";
    int count = 0;
}
<div id="table-container">
    <div class="row adminpage-head">
        <div class="heading col-6">
            <h1>Users <span style="color: #FFEB3B;">[@Model.Count()]</span></h1>
        </div>
        <div class="container-fluid" style=" overflow-x: auto;">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="table-responsive" style="overflow: hidden;">
                        <table class="table table-bordered" id="UserTable" cellspacing="0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>#</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MobileNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DOB)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.HouseNo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Street)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LocalArea)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LandMark)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Pincode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CreatedOn)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count = count + 1;
                                    <tr>
                                        <td>@count</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MobileNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DOB)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.HouseNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Street)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LocalArea)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LandMark)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pincode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreatedOn)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#UserTable').DataTable();
    });
</script>
