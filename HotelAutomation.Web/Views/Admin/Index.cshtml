    </div>
    <div class="row bg-white p-3">
        <div class="charts col-lg-6 col-md-6 col-sm-12">
            <h6 class="text-center p-0 m-0 text-uppercase">
               Popular Dish
            </h6>
            <canvas id="myChart4"></canvas>
        </div>
        <div class="charts col-lg-6 col-md-6 col-sm-12">
            <h6 class="text-center p-0 m-0 text-uppercase">
               Day Orders percentage %
            </h6>
            <canvas id="myChart"></canvas>
        </div>
    </div>
    <div class="charts bg-gradient-light p-3">
        <h6 class="text-center p-0 m-0 pt-3 text-uppercase">
            Monthly Orders
        </h6>
        <canvas id="myChart3"></canvas>
    </div>
    <div class="Newcharts mt-3 bg-white p-3">
        <h6 class="text-center p-0 m-0 pt-3 text-uppercase">
            No. of Orders Between two dates
        </h6>
        <div class="d-flex flex-wrap">
            <div class="mr-2">
                <small class="pr-2">Start Date</small><input type="date" id="StartDate" class="form-control" />
            </div>
            <div class="mr-2">
                <small class="pr-2">End Date</small><input type="date" id="EndDate" class="form-control" />
            </div>
            <div class="align-self-end">
                <button onclick="daySale()" class="btn btn-primary">Search</button>
            </div>
        </div>
        <canvas id="myChart2"></canvas>
    </div>
    <div class="row">
        <div class="adminpage-head mt-3 col-lg-6 col-md-6" style="padding: 0rem 0.5rem;">
            <div class="col-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary text-uppercase">User</h6>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered" id="itemTable" cellspacing="0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Sr No</th>
                                    <th>User</th>
                                    <th>Visit Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.User)
                                {
                                    Count = Count + 1;
                                    <tr>
                                        <td>@Count</td>
                                        <td>@item.User</td>
                                        <td>@item.Count</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="adminpage-head mt-3 col-lg-6 col-md-6" style=" padding: 0rem 0.5rem;">
            <div class="col-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary text-uppercase">Orders Type</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" cellspacing="0">
                                <thead class="thead-dark text-center">
                                    <tr>
                                        <th scope="col">Dine In</th>
                                        <th scope="col">Take Away</th>
                                        <th scope="col">Parcel</th>
                                    </tr>
                                </thead>
                                <tbody class="text-center">
                                    <tr>
                                        <th>@(Model.DineIn + "%")</th>
                                        <th>@(Model.TakeAway + "%")</th>
                                        <th>@(Model.Parcel + "%")</th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#itemTable').DataTable({
            "ordering": true,
            "dom": 'Bfrtip',
            buttons: true,
            "sEmptyTable": "You do not have records."
        });

        $(".disc-input").hide();
        TriCharts();
    });
    let myChart2 = new Chart();
    daySale();
    function daySale() {
        if ($("#StartDate").val() > $("#EndDate").val()) {
            alert("End date should be greater then start date");
        }
        else {
            myChart2.destroy();
            daySaleData();
        }
    }
    function TriCharts() {
        $.ajax({
            url: '/Admin/pieChart',
            success: function (response) {
                var Days = [];
                var value = [];
                for (var i = 0; i < response.length; i++) {
                    Days.push(response[i].Key);
                    value.push(response[i].Value);
                }
                const ctx = document.getElementById('myChart').getContext('2d');
                const myChart = new Chart(ctx, {
                    type: 'pie',
                    data: {
                        labels: Days,
                        datasets: [{
                            label: '% of Orders',
                            data: value,
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)',
                                'rgb(231, 216, 84)'
                            ],
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            title: {
                                display: true,
                            }
                        }
                    },
                });
            },
            error: function (response) {
                alert("Something went wrong!");
            }
        })
        $.ajax({
            url: '/Admin/doughnut',
            success: function (response) {
                var Month = [];
                var value = [];
                for (var i = 0; i < response.length; i++) {
                    Month.push(response[i].Key);
                    value.push(response[i].Value);
                }
                const ctx = document.getElementById('myChart3').getContext('2d');
                const myChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: Month,
                        datasets: [{
                            label: 'No. of Orders',
                            data: value,
                            backgroundColor: [
                                '#f44336a6',
                                'aliceblue',
                                '00800070',
                                'deepskyblue',
                                'Yellow',
                                'Pink',
                                '#607d8b',
                                '#2e2f32',
                                '#ff9800',
                                'Grey',
                                'Purpel',
                                '#795548',
                            ],
                            borderColor: [
                                '#f44336a6',
                                'aliceblue',
                                '00800070',
                                'deepskyblue',
                                'Yellow',
                                'Pink',
                                '#607d8b',
                                '#2e2f32',
                                '#ff9800',
                                'Grey',
