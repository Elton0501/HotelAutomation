                                '#795548',
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            title: {
                                display: true,
                            }
                        }
                    },
                });
            },
            error: function (response) {
                alert("Something went wrong!");
            }
        })
        $.ajax({
            url: '/Admin/lineChart',
            success: function (response) {
                var Month = [];
                var value = [];
                for (var i = 0; i < response.length; i++) {
                    Month.push(response[i].Key);
                    value.push(response[i].Value);
                }
                const ctx = document.getElementById('myChart4').getContext('2d');
                const myChart = new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: Month,
                        datasets: [{
                            label: 'No. of Orders',
                            data: value,
                            backgroundColor: [
                                '#f44336a6',
                                'aliceblue',
                                '#00800070',
                                'deepskyblue',
                                '#ffff0061',
                                'Pink',
                                '#607d8b',
                                '#2e2f32',
                                '#ff9800',
                                'Grey',
                                'Purpel',
                                '#795548',
                            ],
                            borderColor: [
                                '#f44336a6',
                                'aliceblue',
                                '#00800070',
                                'deepskyblue',
                                '#ffff0061',
                                'Pink',
                                '#607d8b',
                                '#2e2f32',
                                '#ff9800',
                                'Grey',
                                'Purpel',
                                '#795548',
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            title: {
                                display: true,
                            }
                        }
                    },
                });
            },
            error: function (response) {
                alert("Something went wrong!");
            }
        })
    };
    function daySaleData() {
        var first = $("#StartDate").val();
        var second = $("#EndDate").val();
        $.ajax({
            url: '/Admin/barChart',
            data: {
                First: first,
                Second: second
            },
            success: function (response) {
                $("#StartDate").val(first);
                $("#EndDate").val(second);
                var Days = [];
                var value = [];
                for (var i = 0; i < response.length; i++) {
                    Days.push(response[i].Key);
                    value.push(response[i].Value);
                }
                let config = {
                    type: 'bar',
                    data: {
                        labels: Days,
                        datasets: [{
                            label: 'No. of Orders',
                            data: value,
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)',
                                'rgb(231, 216, 84)'
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)',
                                'rgb(231, 216, 84)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            title: {
                                display: true,
                            }
                        }
                    },
                };
                if (myChart2 != null) {
                    myChart2.destroy();
                }
                myChart2 = new Chart(document.getElementById('myChart2'), config);
            },
            error: function (response) {
                alert("Something went wrong!");
            }
        })
    }

    function discinputshow() {
        $(".disc-input").show();
        $(".dis-badge").hide();
    }
    $(".app-x").click(function () {
        $(".disc-input").hide();
        $(".dis-badge").show();
    });
    function Discmenu(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You want to discount!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, Change it!'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: 'Status',
                    text: 'Changed',
                    icon: 'success',
                    showConfirmButton: false,
                })
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("RestaurantDiscount", "Admin")',
                    data: {
                        Discount: $("#DineIn").val(),
                        TADiscount: $("#TakeAway").val(),
                        HDDiscount: $("#HomeDelivery").val()
                    }
                })
                    .done(function (response) {
                        if (response == "true") {
                            window.location.reload();
                        }
                        else {
                            alert("Something went wrong!");
                        }
                    })
                    .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                        $('.loadermodel').hide();
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Something went wrong!',
                        })
                    });
            }
        });
    }
</script>
