@model IEnumerable<Models.CaptainDetails>

@{
    ViewBag.Title = "CaptainTable";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var data = Convert.ToString(TempData["Message"]);
    int count = 0;
}
<style>
    .btn {
        font-size: 12px;
    }

    .filter-col {
        padding-left: 10px;
        padding-right: 10px;
    }
    /*    #itemTable_filter{
        display:none;
    }*/
    .dt-buttons {
        float: left;
    }
</style>
<div>
    @if (data != null && data != "")
    {
        if (data == "true")
        {
            <div class="bg-success m-3 mx-5 p-2 text-gray-100">
                <span class="pl-2"> * Successfully Done!</span>
            </div>
        }
        else
        {
            <div class="bg-danger m-3 mx-5 p-2 text-gray-100">
                <span class="pl-2"> * Something went wrong!</span>
            </div>
        }
    }
</div>
<div class="adminpage-head">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">CaptainTable</h6>
            <a href="/Admin/AddCaptain" class="btn btn-primary">
                <span class="glyphicon glyphicon-cog"></span> AddCaptain
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered " id="CaptainTable" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Contact)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UniqueCode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedOn)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedBy)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        count = count + 1;
                        <tr>
                            <td>
                                @count
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UniqueCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedOn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedBy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                <a href="@Url.Action("EditCaptain", new { id = item.Id})" onclick="return confirm('Are you sure wants to Edit this ?');" class="text-primary ml-1 fa-2x" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a href="@Url.Action("DeleteCaptain", new { id = item.Id,TreckId = item.Id})" onclick="return confirm('Are you sure wants to delete this Captain?');" class="text-danger ml-1 fa-2x" title="Delete">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(Document).ready(function () {
        $("#CaptainTable").DataTable();
    });
</script>